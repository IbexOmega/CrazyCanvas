      <Button Margin="0 10 0 10" Click="OnButtonBackClick" Content="Back" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="White" noesis:Text.Stroke="Black" noesis:Text.StrokeThickness="2.5" FontSize="18" Grid.Row="1"/>
