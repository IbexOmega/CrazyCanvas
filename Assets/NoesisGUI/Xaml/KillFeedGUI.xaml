<UserControl x:Class="CrazyCanvas.KillFeedGUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:noesis="clr-namespace:NoesisGUIExtensions;assembly=Noesis.GUI.Extensions"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CrazyCanvasNoesisGUI"
             mc:Ignorable="d" 
             TextElement.FontFamily="gogono_cocoa_mochi.ttf#Gogono Cocoa Mochi"
             d:DesignHeight="100" d:DesignWidth="100"
             x:Name="KILL_FEED_UC">
    <UserControl.Resources>
        <Storyboard x:Key="KillFeedStoryBoard">
         <DoubleAnimationUsingKeyFrames Storyboard.TargetName="FEED" Storyboard.TargetProperty="(Grid.Background).(Brush.Opacity)" EnableDependentAnimation="True">
            <EasingDoubleKeyFrame  KeyTime="0"      Value="1" />
            <EasingDoubleKeyFrame  KeyTime="0:0:8"  Value="0"/>
        </Storyboard>
    </UserControl.Resources>
    
    <ScrollViewer x:Name="KillFeedStackPanel" VerticalScrollBarVisibility="Hidden" HorizontalContentAlignment="Stretch" Background="#3F212121">
        <StackPanel x:Name="KILL_FEED_STACK_PANEL" HorizontalAlignment="Center">
        </StackPanel>
    </ScrollViewer>
</UserControl>
