        </Border>

        <Border x:Name="HEALTH_RECT"  BorderThickness="1" CornerRadius="0, 50, 0, 0" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="3"  Background="#FFE66868" Margin="10" RenderTransformOrigin="0.0,0.0">
            <Border.RenderTransform>
                <ScaleTransform ScaleX="1"/>
            </Border.RenderTransform>
        </Border>
        <TextBlock x:Name="HEALTH_DISPLAY"  Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="3" Text="100%" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0" Foreground="#FFC7144D" FontWeight="Bold" Height="31.923" Width="62.224" />


