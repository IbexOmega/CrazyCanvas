<Grid
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:noesis="clr-namespace:NoesisGUIExtensions;assembly=Noesis.GUI.Extensions"
  mc:Ignorable="d"
  d:DesignWidth="1920" d:DesignHeight="1080"
  x:Name ="ROOT_CONTAINER"
  TextElement.FontFamily="gogono_cocoa_mochi.ttf#Gogono Cocoa Mochi">

    <Grid.Background>
        <SolidColorBrush Color= "#00151717">

        </SolidColorBrush>
    </Grid.Background>
    <Grid.ColumnDefinitions>
        <ColumnDefinition></ColumnDefinition>
        <ColumnDefinition></ColumnDefinition>
        <ColumnDefinition></ColumnDefinition>
        <ColumnDefinition></ColumnDefinition>
        <ColumnDefinition></ColumnDefinition>
        <ColumnDefinition></ColumnDefinition>
        <ColumnDefinition></ColumnDefinition>
        <ColumnDefinition></ColumnDefinition>
        <ColumnDefinition></ColumnDefinition>
        <ColumnDefinition></ColumnDefinition>
    </Grid.ColumnDefinitions>

    <Grid.RowDefinitions>
        <RowDefinition></RowDefinition>
        <RowDefinition></RowDefinition>
        <RowDefinition></RowDefinition>
        <RowDefinition></RowDefinition>
        <RowDefinition></RowDefinition>
        <RowDefinition></RowDefinition>
        <RowDefinition></RowDefinition>
        <RowDefinition></RowDefinition>
        <RowDefinition></RowDefinition>
        <RowDefinition></RowDefinition>
        <RowDefinition></RowDefinition>
        <RowDefinition></RowDefinition>
        <RowDefinition></RowDefinition>
    </Grid.RowDefinitions>


    <Grid x:Name="HEALTH_DISPLAY_GRID" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="9" Grid.RowSpan="4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"></ColumnDefinition>
            <ColumnDefinition Width="40*"></ColumnDefinition>
            <ColumnDefinition Width="40*"></ColumnDefinition>
            <ColumnDefinition Width="40*"></ColumnDefinition>
            <ColumnDefinition Width="10*"></ColumnDefinition>

        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="10*"></RowDefinition>
            <RowDefinition Height="40*"></RowDefinition>
            <RowDefinition Height="40*"></RowDefinition>
            <RowDefinition Height="40*"></RowDefinition>
            <RowDefinition Height="10*"></RowDefinition>

        </Grid.RowDefinitions>

        <Border BorderThickness="1" CornerRadius="0, 50, 0, 0" Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="3" BorderBrush="Black" Background="#FF595959" >

        </Border>
        <Border  BorderThickness="1" CornerRadius="0, 50, 0, 0" Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="3"  Background="#3FD1D1D1" Margin="10" >

        </Border>

        <Border x:Name="HEALTH_RECT"  BorderThickness="1" CornerRadius="0, 50, 0, 0" Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="3"  Background="#FF00CF38" Margin="10" RenderTransformOrigin="0.0,0.0">
            <Border.RenderTransform>
                <ScaleTransform ScaleY="1"/>
            </Border.RenderTransform>
        </Border>

        <TextBlock x:Name="HEALTH_DISPLAY"  Grid.Column="2" Grid.Row="3" Text="100%" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0" Foreground="#FFC7144D" FontWeight="Bold" Height="31.923" Width="62.224" />
        <!--<Image Source="Test.png" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" Grid.RowSpan="2" Margin="0" Width="383.852" Height="392.727" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
        -->
    </Grid>

    <Grid x:Name="SCORE_DISPLAY_GRID" Grid.Column="4" Grid.ColumnSpan="2" Grid.Row="0" Grid.RowSpan="2" Margin="0">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="4*"></ColumnDefinition>
            <ColumnDefinition Width="4*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="8*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>

        </Grid.RowDefinitions>

        <Border  BorderThickness="1" CornerRadius="0, 0, 50, 50" Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="0"  Grid.RowSpan="2" Background="#FF595959"  />
        <Border  BorderThickness="1" CornerRadius="50" Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="0"  Grid.RowSpan="2" Background="#3FD1D1D1" Margin="10" />

        <Image Source="Blue Splatt.png" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-25,-40,-25,0"/>
        <Image Source="Red Splatt.png" Grid.Column="2" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="-25,-40,-25,0" RenderTransformOrigin="0.5,0.5"/>

        <TextBlock x:Name="SCORE_DISPLAY_TEAM_1"  Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" HorizontalAlignment="Center"  TextWrapping="Wrap" Text="1" VerticalAlignment="Center" Foreground="#FF1B1717" FontSize="72" Margin="0,0,0,30"/>
        <TextBlock x:Name="SCORE_DISPLAY_TEAM_2"  Grid.Column="2" Grid.Row="1" Grid.RowSpan="2" HorizontalAlignment="Center"  TextWrapping="Wrap" Text="1" VerticalAlignment="Center" Foreground="#FF1B1717" FontSize="72" Margin="0,0,0,30"/>

    </Grid>


    <Grid x:Name="AMMUNITION_GRID" Grid.Column="8" Grid.ColumnSpan="3"  Grid.Row="10" Grid.RowSpan="5" Margin="-25,-25,25,25">

        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="4*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="4*"></RowDefinition>

        </Grid.RowDefinitions>
        <Image Source="WaterIcon.png" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"></Image>
        <Border BorderThickness="1" CornerRadius="0, 50, 50, 0" Grid.Column="1" Grid.ColumnSpan="4" Grid.Row="1"  >
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="0.557"/>
                    <GradientStop Color="#FF858585" Offset="1"/>
                    <GradientStop Color="#FF414141"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        <Border x:Name="WATER_RECT" BorderThickness="1" CornerRadius="0, 50, 50, 0" Grid.Column="1" Grid.ColumnSpan="4" Grid.Row="1" Background="#FF0080FF" Margin="10" RenderTransformOrigin="0.0,0.0">
            <Border.RenderTransform>
                <ScaleTransform ScaleY="1"/>
            </Border.RenderTransform>
        </Border>
        <Border BorderThickness="1" CornerRadius="0, 50, 50, 0" Grid.Column="1" Grid.ColumnSpan="4" Grid.Row="1"   Background="#720080FF" Margin="10" />
        <TextBlock x:Name="AMMUNITION_WATER_DISPLAY" Grid.Column="2" Grid.Row="1" TextWrapping="Wrap" Text="50/50" FontSize="24" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0"/>

        <Image Source="PaintIcon.png" Grid.Column="0" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center"></Image>
        <Border BorderThickness="1" CornerRadius="0, 50, 50, 0" Grid.Column="1" Grid.ColumnSpan="4" Grid.Row="3"  >
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="0.557"/>
                    <GradientStop Color="#FF858585" Offset="1"/>
                    <GradientStop Color="#FF414141"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        <Border x:Name="PAINT_RECT" BorderThickness="1" CornerRadius="0, 50, 50, 0" Grid.Column="1" Grid.ColumnSpan="4" Grid.Row="3" Background="#FFFF00E8" Margin="10" RenderTransformOrigin="0.0,0.0">
            <Border.RenderTransform>
                <ScaleTransform ScaleY="1"/>
            </Border.RenderTransform>
        </Border>
        <Border BorderThickness="1" CornerRadius="0, 50, 50, 0" Grid.Column="1" Grid.ColumnSpan="4" Grid.Row="3"   Background="#72FF00E8" Margin="10" />
        <TextBlock x:Name="AMMUNITION_PAINT_DISPLAY" Grid.Column="2" Grid.Row="3" TextWrapping="Wrap" Text="50/50" FontSize="24" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0"/>
    </Grid>

    <Image Source="CrossSmall.png" Grid.Column="4" Grid.ColumnSpan="2" Grid.Row="5" Grid.RowSpan="1" Margin="10,5,10,0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="50" Height="50"/>

    <!--EscapeGrid-->
    <Grid x:Name="EscapeGrid" Grid.Column="4" Grid.ColumnSpan="2" Grid.Row="4" Grid.RowSpan="4" Visibility="Hidden">
        <StackPanel x:Name="EscapeButtons" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center">
            <Button Click="OnButtonResumeClick" Content="Resume" Background="{x:Null}" FontSize="48" Foreground="White" noesis:Text.Stroke="Black" noesis:Text.StrokeThickness="2.5" Margin="10"/>
            <Button Click="OnButtonSettingsClick" Content="Settings" Background="{x:Null}" FontSize="48" Foreground="White" noesis:Text.Stroke="Black" noesis:Text.StrokeThickness="2.5" Margin="10"/>
            <Button Click="OnButtonLeaveClick" Content="Leave" Background="{x:Null}" FontSize="48" Foreground="White" noesis:Text.Stroke="Black" noesis:Text.StrokeThickness="2.5" Margin="10"/>
            <Button Click="OnButtonExitClick" Content="Exit" Background="{x:Null}" FontSize="48" Foreground="White" noesis:Text.Stroke="Black" noesis:Text.StrokeThickness="2.5" Margin="10"/>
        </StackPanel>
    </Grid>

    <!--SettingsGrid-->
    <Grid x:Name="SettingsGrid" Grid.Column="3" Grid.ColumnSpan="4" Grid.Row="3" Grid.RowSpan="9" Visibility="Hidden" Height="665" VerticalAlignment="Bottom" Margin="96,0,96,73">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>

        <!--Title-->
        <Label Content="Settings" Foreground="White" FontSize="96" HorizontalAlignment="Center" noesis:Text.Stroke="Black" noesis:Text.StrokeThickness="2.5" VerticalAlignment="Center"/>

        <!--Settings-->
        <StackPanel Grid.Row="1">
            <!--Mesh Shader Toggle-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Label Content="Mesh Shader" Foreground="White" FontSize="29.333" noesis:Text.Stroke="Black" noesis:Text.StrokeThickness="2.5"/>
                <CheckBox x:Name="MeshShaderCheckBox" Grid.Column="1" VerticalAlignment="Center" />
            </Grid>

            <!--Ray Tracing Toggle-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Label Content="Ray Tracing" Foreground="White" FontSize="29.333" noesis:Text.Stroke="Black" noesis:Text.StrokeThickness="2.5"/>
                <CheckBox x:Name="RayTracingCheckBox" Grid.Column="1" VerticalAlignment="Center" />
            </Grid>

            <!--Volume-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Label Content="Volume" Foreground="White" FontSize="29.333" noesis:Text.Stroke="Black" noesis:Text.StrokeThickness="2.5"/>
                <Slider x:Name="VolumeSlider" Grid.Column="1" VerticalAlignment="Center" />
            </Grid>

            <!--Key Bindings-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Label Content="Key Bindings" Foreground="White" FontSize="29.333" noesis:Text.Stroke="Black" noesis:Text.StrokeThickness="2.5"/>
                <Button Click="OnButtonChangeKeyBindingsClick" Content="Change" Grid.Column="1" FontSize="29.333" Margin="50 0 50 0" />
            </Grid>

            <!--Finish Buttons-->
            <Grid Margin="0 50 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Button Click="OnButtonApplySettingsClick" Content="Apply" Grid.Column="0" FontSize="29.333" Margin="50 0 50 0" />
                <Button Click="OnButtonCancelSettingsClick" Content="Cancel" Grid.Column="1" FontSize="29.333" Margin="50 0 50 0" />
            </Grid>
        </StackPanel>
    </Grid>

    <!--Key bindings grid-->
    <Grid x:Name="KeyBindingsGrid" Grid.Column="1" Grid.ColumnSpan="8" Grid.Row="1" Grid.RowSpan="11" Margin="96,58,96,26" Visibility="Hidden">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>

        <!--Title-->
        <Label Content="Key Bindings" Foreground="White" FontSize="96" HorizontalAlignment="Center" noesis:Text.Stroke="Black" noesis:Text.StrokeThickness="2.5" VerticalAlignment="Center"/>

        <!--Key Bindings-->
        <StackPanel Grid.Row="1" Margin="200 0 200 0">
            <!--Movement Title-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Label Content="Movement" Foreground="#FF05DFD7" FontSize="29.333" noesis:Text.Stroke="Black" noesis:Text.StrokeThickness="2.5"/>
            </Grid>
            <Separator/>

            <!--Forward-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Label Content="Forward" Foreground="White" FontSize="29.333" noesis:Text.Stroke="Black" noesis:Text.StrokeThickness="2.5"/>
                <Button Click="OnButtonSetKey" x:Name="ACTION_MOVE_FORWARD" Content="" Grid.Column="1" Margin="50 5 50 5" />
            </Grid>

            <!--Backward-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Label Content="Backward" Foreground="White" FontSize="29.333" noesis:Text.Stroke="Black" noesis:Text.StrokeThickness="2.5"/>
                <Button Click="OnButtonSetKey" x:Name="ACTION_MOVE_BACKWARD" Content="" Grid.Column="1" Margin="50 5 50 5" />
            </Grid>

            <!--Left-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Label Content="Left" Foreground="White" FontSize="29.333" noesis:Text.Stroke="Black" noesis:Text.StrokeThickness="2.5"/>
                <Button Click="OnButtonSetKey" x:Name="ACTION_MOVE_LEFT" Content="" Grid.Column="1" Margin="50 5 50 5" />
            </Grid>

            <!--Right-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Label Content="Right" Foreground="White" FontSize="29.333" noesis:Text.Stroke="Black" noesis:Text.StrokeThickness="2.5"/>
                <Button Click="OnButtonSetKey" x:Name="ACTION_MOVE_RIGHT" Content="" Grid.Column="1" Margin="50 5 50 5" />
            </Grid>

            <!--Jump-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Label Content="Jump" Foreground="White" FontSize="29.333" noesis:Text.Stroke="Black" noesis:Text.StrokeThickness="2.5"/>
                <Button Click="OnButtonSetKey" x:Name="ACTION_MOVE_JUMP" Content="" Grid.Column="1" Margin="50 5 50 5" />
            </Grid>

            <!--Sprint-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Label Content="Sprint" Foreground="White" FontSize="29.333" noesis:Text.Stroke="Black" noesis:Text.StrokeThickness="2.5"/>
                <Button Click="OnButtonSetKey" x:Name="ACTION_MOVE_SPRINT" Content="" Grid.Column="1" Margin="50 5 50 5" />
            </Grid>

            <!--Attack Title-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Label Content="Attack" Foreground="#FF05DFD7" FontSize="29.333" noesis:Text.Stroke="Black" noesis:Text.StrokeThickness="2.5"/>
            </Grid>
            <Separator/>

            <!--Primary-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Label Content="Primary" Foreground="White" FontSize="29.333" noesis:Text.Stroke="Black" noesis:Text.StrokeThickness="2.5"/>
                <Button Click="OnButtonSetKey" x:Name="ACTION_ATTACK_PRIMARY" Content="" Grid.Column="1" Margin="50 5 50 5" />
            </Grid>

            <!--Secondary-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Label Content="Secondary" Foreground="White" FontSize="29.333" noesis:Text.Stroke="Black" noesis:Text.StrokeThickness="2.5"/>
                <Button Click="OnButtonSetKey" x:Name="ACTION_ATTACK_SECONDARY" Content="" Grid.Column="1" Margin="50 5 50 5" />
            </Grid>

            <!--Reload-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Label Content="Reload" Foreground="White" FontSize="29.333" noesis:Text.Stroke="Black" noesis:Text.StrokeThickness="2.5"/>
                <Button Click="OnButtonSetKey" x:Name="ACTION_ATTACK_RELOAD" Content="" Grid.Column="1" Margin="50 5 50 5" />
            </Grid>

            <!--Finish Buttons-->
            <Grid Margin="0 50 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Button Click="OnButtonApplyKeyBindingsClick" Content="Apply" Grid.Column="0" FontSize="29.333" Margin="50 0 50 0" />
                <Button Click="OnButtonCancelKeyBindingsClick" Content="Cancel" Grid.Column="1" FontSize="29.333" Margin="50 0 50 0"/>
            </Grid>
        </StackPanel>
    </Grid>

